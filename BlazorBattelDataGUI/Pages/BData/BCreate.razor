@page "/battels/add"
@inject IUnitOfwork unitofwork
@inject NavigationManager NavManager
<h1>Create</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
     <form>
         <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind= "@battle.Name"/>
                 <label for="Name" class="control-label">Year</label>
                <input for="Name" class="form-control" @bind= "@battle.BattelYear"/>

         </div>


         <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateBattle" value="Save"/>
                <input type="button" class="btn btn-primary" @onclick="@cancel" value="Cancel"/>>


         </div>

      </form>
   </div>
</div>



@code {
    Battle battle = new Battle();
    protected async void CreateBattle()
    {
        unitofwork.AddBattle(battle);
        this.StateHasChanged();
        NavManager.NavigateTo("/battles");
    }
    public void cancel()
    {
        NavManager.NavigateTo("/battles");
    }

}
