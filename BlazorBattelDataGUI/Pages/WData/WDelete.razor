@page "/weapons/delete/{id}"
@inject IUnitOfwork unitofwork
@inject NavigationManager Navmanager

<h1>Delete Weapons</h1>
<hr/>
<form>
    <div class="row">
    <div class="col-md-4">
        <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@weapon.Name"  />
            </div>
            <div class="form-group">
                <input type="button" class="btn btn-primary"  @onclick="@DeleteWeapons" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@cancel" value ="Cancel" />
            </div>






    </div>
    </div>

</form>

@code {
    [Parameter]
    public string Id { get; set; }
    //Horses horses = new Horses();
    //List<Horses> horse = new List<Horses>();
    Weapon weapon = new Weapon();
    protected async void DeleteWeapons()
    {
        weapon.ID = Convert.ToInt32(Id);
        unitofwork.RemoveWeapons(weapon);
        
        Navmanager.NavigateTo("/weapon");


    }
    public void cancel()
    {
        Navmanager.NavigateTo("/weapon");
    }

}
