@page "/musems/add"
@inject IUnitOfwork unitofwork
@inject NavigationManager Navmanager
<h1>Create</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind= "@museum.Name"/>
                 <label for="Name" class="control-label">place</label>
                <input for="Name" class="form-control" @bind= "@museum.Place"/>


            </div>
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateMusems" value="Save"/>
                <input type="button" class="btn btn-primary" @onclick="@cancel" value="Cancel"/>
                @*<label for ="Name" class="control-label">Name</label>
                <input  for="Name " class="form-control"/>*@
            </div>
        </form>
    </div>
</div>

@code {
    Museum museum = new Museum();
    

    public async void CreateMusems()
    {
        unitofwork.AddMusems(museum);
        

        this.StateHasChanged();

        Navmanager.NavigateTo("/musems");



    }
    void cancel()
    {
        Navmanager.NavigateTo("/musems");
    }

}
